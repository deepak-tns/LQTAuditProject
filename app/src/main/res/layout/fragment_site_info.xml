<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mViewModel"
            type="com.segal.lqtauditproject.ViewModels.SiteInfoViewModel" />

        <variable
            name="mViewEvents"
            type="com.segal.lqtauditproject.ViewEvents.SiteDetailsEvents" />
    </data>

    <LinearLayout
        android:id="@+id/fragment_site_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:background="@color/colorWhite"
        tools:context="com.segal.lqtauditproject.FragmentSiteInfo">


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:padding="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/tvComments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_layout_site_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Site Id">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/inputSiteId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/section_label"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:ems="10"
                            android:inputType="text"
                            android:text="@={mViewModel.siteId}" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_layout_site_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Site Name">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/inputSiteName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/section_label"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:ems="10"
                            android:inputType="text"
                            android:text="@={mViewModel.siteName}" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plan Latitude" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{mViewModel.planLatitude}" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plan Longitude" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{mViewModel.planLongitude}" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_layout_onsite_latitude"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="OnSite Latitude">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/inputOnSiteLatitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/section_label"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:text="@={mViewModel.onSiteLatitude}" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_layout_onsite_longitude"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="OnSite Longitude">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/inputOnSiteLongitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:text="@={mViewModel.onSiteLongitude}" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_input_layout_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/inputAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/section_label"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:ems="10"
                        android:inputType="text"
                        android:text="@={mViewModel.address}" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_layout_building_height"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:hint="Building Height">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/inputBuildingHeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/section_label"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:text="@={mViewModel.buildingHeight}" />
                    </android.support.design.widget.TextInputLayout>

                    <!--android:src="@android:drawable/ic_menu_gallery"-->
                    <!--app:src="@={mViewModel.buildingHeightImagePath == null ? @android:drawable/ic_menu_gallery : mViewModel.buildingHeightImagePath}"-->

                    <com.segal.lqtauditproject.CustomViews.HaImageView
                        android:id="@+id/imgBuildingHeightImage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:tag="imgView,BuildingHeight"
                        app:image="@={mViewModel.buildingHeightImagePath}" />

                    <ImageButton
                        android:id="@+id/btnBuildingHeightImage"
                        style="@style/AppTheme.CameraBtn"
                        android:layout_width="@dimen/camera_btn_size"
                        android:layout_height="@dimen/camera_btn_size"
                        android:tag="camBtn,BuildingHeight" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_space" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_layout_tower_height"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:hint="Tower Height">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/inputTowerHeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/section_label"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:text="@={mViewModel.towerHeight}" />
                    </android.support.design.widget.TextInputLayout>

                    <!--android:src="@android:drawable/ic_menu_gallery"-->
                    <!--app:src="@={mViewModel.buildingHeightImagePath == null ? @android:drawable/ic_menu_gallery : mViewModel.buildingHeightImagePath}"-->

                    <com.segal.lqtauditproject.CustomViews.HaImageView
                        android:id="@+id/imgTowerHeightImage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:tag="imgView,TowerHeight"
                        app:image="@={mViewModel.towerHeightImagePath}" />

                    <ImageButton
                        android:id="@+id/btnTowerHeightImage"
                        style="@style/AppTheme.CameraBtn"
                        android:layout_width="@dimen/camera_btn_size"
                        android:layout_height="@dimen/camera_btn_size"
                        android:tag="camBtn,TowerHeight" />


                </LinearLayout>

                <CheckBox
                    android:id="@+id/inputIsCoLocated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="@={mViewModel.coLocated}"

                    android:text="Co-Located" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="6dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Technologies" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/inputTechnology2G"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="@={mViewModel.hasTechnology2g}"
                        android:text="2G" />

                    <CheckBox
                        android:id="@+id/inputTechnology3G"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="@={mViewModel.hasTechnology3g}"
                        android:text="3G" />

                    <CheckBox
                        android:id="@+id/inputTechnology4G"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="@={mViewModel.hasTechnology4g}"
                        android:text="4G" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_space" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vendor" />
                <!--bind:selectedValue="@={mViewModel.vendor}"-->
                <Spinner
                    android:id="@+id/inputVendor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/vendors"
                    android:prompt="@string/vendors_prompt"
                    app:holder="@={mViewModel.vendor}" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_space" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Site Type" />

                <Spinner
                    android:id="@+id/inputSiteType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/site_types"
                    android:prompt="@string/site_types_prompt"
                    app:holder="@={mViewModel.siteType}" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_space" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tower" />

                <Spinner
                    android:id="@+id/inputTower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/towers"
                    android:prompt="@string/towers_prompt"
                    app:holder="@={mViewModel.tower}" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_space" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_layout_site_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:hint="Site Label">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/inputSiteLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/section_label"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:ems="10"
                            android:inputType="text"
                            android:text="@={mViewModel.siteLabel}" />
                    </android.support.design.widget.TextInputLayout>

                    <com.segal.lqtauditproject.CustomViews.HaImageView
                        android:id="@+id/imgSiteLabelImage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:tag="imgView,SiteLabel"
                        app:image="@={mViewModel.siteLabelImagePath}" />

                    <ImageButton
                        android:id="@+id/btnSiteLabelImage"
                        style="@style/AppTheme.CameraBtn"
                        android:layout_width="@dimen/camera_btn_size"
                        android:layout_height="@dimen/camera_btn_size"
                        android:tag="camBtn,SiteLabel" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_space" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvBTSInside"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:paddingBottom="@dimen/image_tv_vertical_padding"
                        android:paddingTop="@dimen/image_tv_vertical_padding"
                        android:text="BTS Inside" />


                    <com.segal.lqtauditproject.CustomViews.HaImageView
                        android:id="@+id/imgBTSInsideImage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:tag="imgView,BTSInside"
                        app:image="@={mViewModel.btsInsideImagePath}" />

                    <ImageButton
                        android:id="@+id/btnBTSInsideImage"
                        style="@style/AppTheme.CameraBtn"
                        android:layout_width="@dimen/camera_btn_size"
                        android:layout_height="@dimen/camera_btn_size"
                        android:tag="camBtn,BTSInside" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_space" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvBTSOutside"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:paddingBottom="@dimen/image_tv_vertical_padding"
                        android:paddingTop="@dimen/image_tv_vertical_padding"
                        android:text="BTS Outside" />


                    <com.segal.lqtauditproject.CustomViews.HaImageView
                        android:id="@+id/imgBTSOutsideImage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:tag="imgView,BTSOutside"
                        app:image="@={mViewModel.btsOutsideImagePath}" />

                    <ImageButton
                        android:id="@+id/btnBTSOutsideImage"
                        style="@style/AppTheme.CameraBtn"
                        android:layout_width="@dimen/camera_btn_size"
                        android:layout_height="@dimen/camera_btn_size"
                        android:tag="camBtn,BTSOutside" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_space" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvAntBuildingZoomIn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:paddingBottom="@dimen/image_tv_vertical_padding"
                        android:paddingTop="@dimen/image_tv_vertical_padding"
                        android:text="Ant. Building ZoomIn" />


                    <com.segal.lqtauditproject.CustomViews.HaImageView
                        android:id="@+id/imgAntBuildingZoomInImage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:tag="imgView,BuildingZoomIn"
                        app:image="@={mViewModel.antBuildingZoomInImagePath}" />

                    <ImageButton
                        android:id="@+id/btnAntBuildingZoomInImage"
                        style="@style/AppTheme.CameraBtn"
                        android:layout_width="@dimen/camera_btn_size"
                        android:layout_height="@dimen/camera_btn_size"
                        android:tag="camBtn,BuildingZoomIn" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_space" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvAntBuildingZoomOut"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:paddingBottom="@dimen/image_tv_vertical_padding"
                        android:paddingTop="@dimen/image_tv_vertical_padding"
                        android:text="Ant. Building ZoomOut" />


                    <com.segal.lqtauditproject.CustomViews.HaImageView
                        android:id="@+id/imgAntBuildingZoomOutImage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:tag="imgView,BuildingZoomOut"
                        app:image="@={mViewModel.antBuildingZoomOutImagePath}" />

                    <ImageButton
                        android:id="@+id/btnAntBuildingZoomOutImage"
                        style="@style/AppTheme.CameraBtn"
                        android:layout_width="@dimen/camera_btn_size"
                        android:layout_height="@dimen/camera_btn_size"
                        android:tag="camBtn,BuildingZoomOut" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_space" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvGPSSnapshot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:paddingBottom="@dimen/image_tv_vertical_padding"
                        android:paddingTop="@dimen/image_tv_vertical_padding"
                        android:text="GPS Snapshot" />


                    <com.segal.lqtauditproject.CustomViews.HaImageView
                        android:id="@+id/imgGPSSnapshotImage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:tag="imgView,GPSSnapshot"
                        app:image="@={mViewModel.gpsSnapshotImagePath}" />

                    <ImageButton
                        android:id="@+id/btnGPSSnapshotImage"
                        style="@style/AppTheme.CameraBtn"
                        android:layout_width="@dimen/camera_btn_size"
                        android:layout_height="@dimen/camera_btn_size"
                        android:tag="camBtn,GPSSnapshot" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_space" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvExtra1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:paddingBottom="@dimen/image_tv_vertical_padding"
                        android:paddingTop="@dimen/image_tv_vertical_padding"
                        android:text="Extra 1" />


                    <com.segal.lqtauditproject.CustomViews.HaImageView
                        android:id="@+id/imgExtra1Image"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:tag="imgView,Extra1Img"
                        app:image="@={mViewModel.extra1ImagePath}" />

                    <ImageButton
                        android:id="@+id/Extra1"
                        style="@style/AppTheme.CameraBtn"
                        android:layout_width="@dimen/camera_btn_size"
                        android:layout_height="@dimen/camera_btn_size"
                        android:tag="camBtn,Extra1" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_space" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvExtra2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:paddingBottom="@dimen/image_tv_vertical_padding"
                        android:paddingTop="@dimen/image_tv_vertical_padding"
                        android:text="Extra 2" />


                    <com.segal.lqtauditproject.CustomViews.HaImageView
                        android:id="@+id/imgExtra2Image"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:tag="imgView,Extra2"
                        app:image="@={mViewModel.extra2ImagePath}" />

                    <ImageButton
                        android:id="@+id/btnExtra2Image"
                        style="@style/AppTheme.CameraBtn"
                        android:layout_width="@dimen/camera_btn_size"
                        android:layout_height="@dimen/camera_btn_size"
                        android:tag="camBtn,Extra2" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_space" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvRigger"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:paddingBottom="@dimen/image_tv_vertical_padding"
                        android:paddingTop="@dimen/image_tv_vertical_padding"
                        android:text="Rigger Photo" />

                    <com.segal.lqtauditproject.CustomViews.HaImageView
                        android:id="@+id/imgRigger"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_menu_gallery"

                        android:tag="imgView,Rigger"
                        app:image="@={mViewModel.riggerImagePath}" />

                    <ImageButton
                        android:id="@+id/btnRiggerImage"
                        style="@style/AppTheme.CameraBtn"
                        android:layout_width="@dimen/camera_btn_size"
                        android:layout_height="@dimen/camera_btn_size"
                        android:tag="camBtn,Rigger" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="70dp" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>
</layout>